{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: G++.exe Uruchom i debuguj",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            // Nazwa zadania z tasks.json
            "preLaunchTask": "C/C++: gcc.exe build active file", 
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\msys64\\ucrt64\\bin\\gdb.exe", // Upewnij się, że ścieżka do gdb.exe jest poprawna
            "setupCommands": [
                {
                    "description": "Włącz automatyczne formatowanie dla gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}